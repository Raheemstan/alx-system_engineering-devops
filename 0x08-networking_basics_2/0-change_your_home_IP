#!/usr/bin/env bash
# Change localhost and facebook.com IP resolutions

cp /etc/hosts ~/hosts.new

# Change localhost IP to 127.0.0.2
sudo sed -i 's/127.0.0.1/127.0.0.2/g' /etc/hosts

# Change facebook.com IP to 8.8.8.8
sudo sed -i 's/^\(.*\)facebook.com$/8.8.8.8\tfacebook.com \1/' /etc/hosts

cp -f ~/hosts.new /etc/hosts
