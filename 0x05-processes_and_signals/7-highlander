#!/bin/bash

# Find the process ID (PID) of 7-highlander
process_id=$(pgrep -f "7-highlander")

# Define a function to handle SIGTERM signal
handle_sigterm() {
    echo "I am invincible!!!"
    exit 0
}

# Trap SIGTERM signal to invoke the function
trap handle_sigterm SIGTERM

# Infinite loop displaying the message with a 2-second delay between each iteration
while true; do
    echo "To infinity and beyond"
    sleep 2
done
